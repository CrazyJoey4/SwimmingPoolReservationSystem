<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/swimming_back"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    android:scaleType="centerCrop">

    <LinearLayout
        android:id="@+id/bookPool"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text=" RESERVE YOUR POOL "
            android:textColor="@color/blue"
            android:textSize="35dp"
            android:textStyle="bold" />

        <DatePicker
            android:id="@+id/bookDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="410dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:alpha="0.8"
            android:background="@color/white"
            android:calendarTextColor="@color/white"
            android:datePickerMode="calendar"
            android:headerBackground="@color/annblue" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookDatePicker"
                android:layout_marginLeft="150dp"
                android:backgroundTint="@color/annblue"
                android:text="Confirm" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSlot1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/linear1"
                android:backgroundTint="@color/blue"
                android:text="0800-1000"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnSlot2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/linear1"
                android:layout_marginLeft="6dp"
                android:backgroundTint="@color/blue"
                android:text="1030-1230"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnSlot3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/linear1"
                android:layout_marginLeft="6dp"
                android:backgroundTint="@color/blue"
                android:text="1330-1530"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSlot4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/linear1"
                android:backgroundTint="@color/blue"
                android:text="1600-1800"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnSlot5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/linear1"
                android:layout_marginLeft="6dp"
                android:backgroundTint="@color/blue"
                android:text="1900-2100"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnSlot6"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/linear1"
                android:layout_marginLeft="6dp"
                android:backgroundTint="@color/blue"
                android:text="2130-2330"
                android:textSize="16dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/poolType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Pool Type"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80FFFFFF"
            android:backgroundTintMode="src_over"
            android:orientation="vertical"
            android:padding="8dp">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/poolT1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Olympic Pool"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/poolT2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Party Pool"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/poolT3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Kids Pool"
                    android:textSize="16dp" />

            </RadioGroup>

            <NumberPicker
                android:id="@+id/paxNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#80FFFFFF"
            android:backgroundTintMode="src_over"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dateShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/poolShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paxShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeShow"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/annblue"
            android:text="Proceed"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>

</ScrollView>